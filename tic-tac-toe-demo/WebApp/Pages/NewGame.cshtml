@page
@model WebApp.Pages.NewGameModel

<h2>New Game</h2>

<form method="post" class="mt-1">

    <div class="mb-1">
        <label class="form-label">Game name:</label>
        <input type="text" asp-for="GameName" class="form-control"/>
    </div>

    <div class="mb-1">
        <label class="form-label">Player 1 Name:</label>
        <input type="text" asp-for="Player1Name" class="form-control"/>
    </div>

    <div class="mb-1">
        <label class="form-label">Player 2 Name:</label>
        <input type="text" asp-for="Player2Name" class="form-control"/>
    </div>

    <div class="mb-1 form-check">
        <input type="checkbox" asp-for="IsVsAi" class="form-check-input"/>
        <label class="form-check-label">Play vs AI?</label>
    </div>

    <div class="mb-1">
        <label class="form-label">Board Width:</label>
        <input type="number" asp-for="BoardWidth" min="4" max="20" class="form-control"/>
    </div>

    <div class="mb-1">
        <label class="form-label">Board Height:</label>
        <input type="number" asp-for="BoardHeight" min="4" max="20" class="form-control"/>
    </div>

    <button type="submit" class="btn btn-primary">Start Game</button>
</form>